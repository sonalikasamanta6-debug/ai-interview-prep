<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <main class="admin-page">
    <section class="dashboard-card admin-card">
      <h1>Admin Panel</h1>
      <p class="muted">Welcome, <strong><%= adminName %></strong></p>

      <div class="table-wrap">
        <table class="users-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Role</th>
              <th class="actions-col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.name || user.username || "—" %></td>
                <td><%= user.email %></td>
                <td><%= user.phone || "—" %></td>
                <td class="role-cell"><%= user.roles %></td>
                <td>
                  <div class="actions">
                    <% const isSelf = ('' + user._id) === ('' + currentAdminId); %>

                    <% if (user.roles === "USER") { %>
                    

                      <button onclick=" " class="admin-btn promote" data-id="<%= user._id %>" <%= isSelf ? 'disabled title="This is you"' : '' %>>Promote</button>
                    <% } else { %>
                      <button class="admin-btn demote" data-id="<%= user._id %>" <%= isSelf ? 'disabled title="This is you"' : '' %>>Demote</button>
                    <% } %>

                    <button class="admin-btn delete" data-id="<%= user._id %>" <%= isSelf ? 'disabled title="This is you"' : '' %>>Delete</button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <p style="text-align:center; margin-top:28px;">
        <a class="link" href="/user">Back to Dashboard</a>
      </p>
    </section>
  </main>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
    // delegate click events for Promote / Demote / Delete buttons
    document.body.addEventListener("click", async (e) => {
      const el = e.target;
      if (!el.classList) return;

      // helper to post JSON and handle response
      async function postJson(path, payload) {
        console.log(payload)
        try {
          const res = await fetch(path, {
            method: "POST",
            body: JSON.stringify(payload),
            headers: { "Content-Type": "application/json" }
          });
          return await res.json();
        } catch (err) {
          console.error("Network error:", err);
          return { ok: false, message: "Network error" };
        }
      }

      // Promote
      if (el.matches(".promote")) {
        const id = el.dataset.id;
        console.log(id)
        el.disabled = true;
        el.textContent = "Promoting...";
        const json = await postJson("/admin/promote", { id });
        if (json.ok) window.location.reload();
        else { alert(json.message || "Failed to promote"); el.disabled = false; el.textContent = "Promote"; }
      }

      // Demote
      if (el.matches(".demote")) {
        const id = el.dataset.id;
        if (!confirm("Are you sure you want to demote this user?")) return;
        el.disabled = true;
        el.textContent = "Demoting...";
        const json = await postJson("/admin/demote", { id });
        if (json.ok) window.location.reload();
        else { alert(json.message || "Failed to demote"); el.disabled = false; el.textContent = "Demote"; }
      }

      // Delete
      if (el.matches(".delete")) {
        const id = el.dataset.id;
        if (!confirm("Are you sure you want to delete this user? This cannot be undone.")) return;
        el.disabled = true;
        el.textContent = "Deleting...";
        const json = await postJson("/admin/delete", { id });
        if (json.ok) window.location.reload();
        else { alert(json.message || "Failed to delete"); el.disabled = false; el.textContent = "Delete"; }
      }
    });
  });
    </script>

  </body>
</html>
